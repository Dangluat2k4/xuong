<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/khung"
    >
    <EditText
        android:id="@+id/edtUDProductIDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtUDNameB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtUDQuantityB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtUDCreateByB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtUDCreatedDateB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtUDNoteB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnUDBill"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_marginRight="50dp"
            android:background="@drawable/baseline_update_24" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:background="@drawable/cancel"/>
    </LinearLayout>

</LinearLayout>