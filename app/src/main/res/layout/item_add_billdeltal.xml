<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <Spinner
        android:id="@+id/spnABillDT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/txtQuanLityDT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/khung" />

    <TextView
        android:id="@+id/txtCreateDateDT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/khung" />
    <EditText
        android:id="@+id/edtPriceDT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/khung1"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btnABillDT"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_marginRight="50dp"
            android:background="@drawable/baseline_update_24" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:background="@drawable/cancel" />

    </LinearLayout>

</LinearLayout>