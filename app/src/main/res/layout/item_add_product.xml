<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edtANamePR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào tên sản phẩm :"/>

    <EditText
        android:id="@+id/edtAQuanlityPR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nhập vào số lượng :"
        />

    <EditText
        android:id="@+id/edtAPricePR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào giá :"
        />

    <Spinner
        android:id="@+id/spnUR"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <ImageButton
        android:id="@+id/IBAIMGPR"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/folder"
        />
    <ImageView
        android:id="@+id/IAIMGPR"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="#AF7A7A"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btnAPR"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Add"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

</LinearLayout>