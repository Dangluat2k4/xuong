<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/khung"
    android:backgroundTint="#FDC3C3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtIDDT"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/khung" />

        <TextView
            android:id="@+id/txtBID"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/khung" />

        <TextView
            android:id="@+id/txtQLTDT"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/khung" />

        <TextView
            android:id="@+id/txtCRDate"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/khung" />
        <TextView
            android:id="@+id/txtPriceDT"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/khung" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnDeleteDT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/delete" />

        <Button
            android:id="@+id/btnUDDT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_update_24" />

    </LinearLayout>

</LinearLayout>