<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/khung1"
    android:backgroundTint="#FDC3C3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtIDDT"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/khung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBID"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/khung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtIDDT"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQLTDT"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/khung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIDDT" />

    <TextView
        android:id="@+id/txtCRDate"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/khung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQLTDT" />

    <TextView
        android:id="@+id/txtPriceDT"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/khung"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCRDate"
        app:layout_constraintVertical_bias="0.448" />

    <Button
        android:id="@+id/btnDeleteDT"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/txtPriceDT"
        app:layout_constraintTop_toBottomOf="@+id/txtCRDate" />

