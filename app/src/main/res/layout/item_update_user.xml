<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <EditText
        android:id="@+id/edtUDUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào tên :"/>

    <EditText
        android:id="@+id/edtUDNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nhập vào số điện thoại"
        />

    <EditText
        android:id="@+id/edtUDPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào vị trí :"/>

    <EditText
        android:id="@+id/edtUDProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="giới thiệu bản thân :"
        />
    <ImageButton
        android:id="@+id/IBUDIMG"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/folder"
        />
    <ImageView
        android:id="@+id/IIMG"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="#F4E6E6"
        android:layout_gravity="center"
        />
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnUDU"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="update"
        android:layout_marginTop="5dp"
        />
</LinearLayout>