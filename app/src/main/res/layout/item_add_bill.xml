<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã sản phẩm :"
        android:textSize="20dp"
        />
    <Spinner
        android:id="@+id/spnMaSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtANameB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào tên hóa đơn" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Số lượng sản phẩm :"/>
    <TextView
        android:id="@+id/txtSL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo bởi"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/txtCreateBy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/edtACreatedDateB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Ngày tạo :" />

    <EditText
        android:id="@+id/edtANoteB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chú thích :" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnABill"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:background="@drawable/baseline_update_24"
            android:layout_marginRight="30dp"
            />

        <Button
            android:id="@+id/btnACancel"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/cancel" />
    </LinearLayout>


</LinearLayout>